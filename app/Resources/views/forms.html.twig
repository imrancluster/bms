{% block form_row %}
{% spaceless %}
    <div class="form-group">
        <div class="col-sm-10">
        	{{ form_label(form) }}
	        {{ form_widget(form) }}
	        {{ form_errors(form) }}
        </div>
    </div>
{% endspaceless %}
{% endblock form_row %}


{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
    <span class="help-inline">
        {% for error in errors %}
            {{ error.message }}
        {% endfor %}
    </span>
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}